{
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static-build"
    }
  ],
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "https://game-night-hub--metatrader.replit.app/api/$1" }
  ]
}
